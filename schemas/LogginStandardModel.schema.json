{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://transferdirecto.com/logging/LogginStandardModel.schema.json",
  "title": "LogginStandardModel",
  "description": "Standard log event for multi-tenant pipeline (Processor → Firehose → OpenSearch/S3).",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "ingestionContractVersion",
    "eventTime",
    "eventType",
    "tenantId",
    "country",
    "stage",
    "transactionId",
    "service",
    "operation",
    "severity",
    "status"
  ],
  "properties": {
    "ingestionContractVersion": { "type": "string" },
    "eventTime": { "type": "string", "format": "date-time" },
    "eventType": { "type": "string", "enum": ["inbound", "outbound", "internal", "audit", "error"] },
    "tenantId": { "type": "string", "minLength": 1 },
    "country": { "type": "string", "pattern": "^[A-Z]{2}$" },
    "stage": { "type": "string", "enum": ["dev", "test", "staging", "prod"] },
    "transactionId": { "type": "string", "minLength": 1 },
    "traceId": { "type": "string" },
    "spanId": { "type": "string" },
    "parentSpanId": { "type": "string" },
    "service": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "namespace": { "type": "string" },
        "environment": { "type": "string" },
        "host": { "type": "string" },
        "containerId": { "type": "string" },
        "awsRequestId": { "type": "string" }
      }
    },
    "operation": { "type": "string" },
    "message": { "type": "string" },
    "severity": { "type": "string", "enum": ["verbose", "debug", "info", "warn", "error", "fatal"] },
    "status": { "type": "string", "enum": ["success", "failure", "partial"] },
    "durationMs": { "type": "number", "minimum": 0 },
    "http": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "request": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "method": { "type": "string" },
            "scheme": { "type": "string", "enum": ["http", "https"] },
            "host": { "type": "string" },
            "path": { "type": "string" },
            "query": { "type": "string" },
            "headers": { "type": "object", "additionalProperties": { "type": ["string","array","number","boolean"] } },
            "sizeBytes": { "type": "integer", "minimum": 0 }
          }
        },
        "response": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "statusCode": { "type": "integer", "minimum": 100, "maximum": 599 },
            "headers": { "type": "object", "additionalProperties": { "type": ["string","array","number","boolean"] } },
            "sizeBytes": { "type": "integer", "minimum": 0 },
            "latencyMs": { "type": "number", "minimum": 0 }
          }
        }
      }
    },
    "user": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "ip": { "type": "string" },
        "userAgent": { "type": "string" }
      }
    },
    "business": {
      "type": "object",
      "description": "Business identifiers to slice & dice",
      "additionalProperties": true,
      "properties": {
        "interfaceFlowId": { "type": "string" },
        "businessFlowId": { "type": "string" },
        "msgId": { "type": "string" },
        "transactionType": { "type": "string" }
      }
    },
    "payload": {
      "description": "Optional request/response body or business payload",
      "oneOf": [
        { "type": "object" },
        { "type": "array" },
        { "type": "string", "maxLength": 131072 }
      ]
    },
    "payloadContentType": { "type": "string" },
    "payloadSizeBytes": { "type": "integer", "minimum": 0 },
    "payloadTruncated": { "type": "boolean" },
    "dataClassification": { "type": "string", "enum": ["public", "internal", "confidential", "restricted", "pii", "phi", "pci"] },
    "piiMasked": { "type": "boolean" },
    "error": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "type": "string" },
        "code": { "type": "string" },
        "message": { "type": "string" },
        "stack": { "type": "string" }
      }
    },
    "tags": { "type": "array", "items": { "type": "string" }, "maxItems": 32 },
    "ext": { "type": "object", "additionalProperties": true }
  }
}